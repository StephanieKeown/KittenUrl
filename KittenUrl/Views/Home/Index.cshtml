
@model KittenUrl.Models.KittenUrlModel
@{
    ViewData["Title"] = "Home Page";
}


<section id="urlForm">
    <form enctype="application/x-www-form-urlencoded" method="POST" action="home/shorten">
        <label for="url">
            URL
        </label>
        <input type="url" name="url" />
        <button type="submit">Shorten My Url!</button>
    </form>
</section>

@if(Model.ShortUrl != null)
{
<section style="padding-left:50px;padding-top:50px;">
    <div>
        <h4>Your original url:</h4>
        <label>@Model.LongUrl</label>
        <h4>Your kittenurl: </h4>
        <label>@Model.ShortUrl</label>
    </div>
</section>
}